<?xml version="1.0" encoding="UTF-8"?>
<!-- The root node for Magento module configuration -->
<config>
    <modules>
        <D4DL_ResourceWatch>
            <version>0.0.1</version>
        </D4DL_ResourceWatch>
    </modules>
    <global>
        <models>
            <d4dl_resourcewatch>
                <class>D4DL_ResourceWatch_Model</class>
            </d4dl_resourcewatch>

        </models>
        <helpers>
            <resourcewatch>
                <class>D4DL_ResourceWatch_Helper</class>
            </resourcewatch>
        </helpers>
        <events>
            <!-- -->
            <sales_order_place_after>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </sales_order_place_after>
            <sales_order_invoice_pay>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </sales_order_invoice_pay>
            <sales_order_invoice_pay>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </sales_order_invoice_pay>
            <checkout_onepage_controller_success_action>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </checkout_onepage_controller_success_action>
            <sales_order_payment_capture>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </sales_order_payment_capture>
            <sales_order_invoice_register>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </sales_order_invoice_register>
            <checkout_cart_add_product_complete>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </checkout_cart_add_product_complete>
            <catalog_product_save_after>
                <observers>
                    <d4dl_resourcewatch>
                        <class>d4dl_resourcewatch/observer</class>
                        <method>processEvent</method>
                        <type>singleton</type>
                    </d4dl_resourcewatch>
                </observers>
            </catalog_product_save_after>
        </events>

    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <resourcewatch after="Mage_Adminhtml">D4DL_ResourceWatch</resourcewatch>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <resourcewatch translate="title" module="resourcewatch">
                                            <title>D4DL Resource Watch Settings</title>
                                        </resourcewatch>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
